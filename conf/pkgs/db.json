#this is a extended json package definition file - we allow simple comments (starting with a hash symbol)
#for a given distro, when the component is installed
#the following packages will be installed with
#the distribution specific package installation class
{
    "ubuntu-oneiric": {
        "mysql-client-5.1": {
            "version": "5.1.58-1ubuntu1",
            "allowed": ">=",
            "removable": true
        },
        "mysql-server-core-5.1": {
            "version": "5.1.58-1ubuntu1",
            "allowed": ">=",
            "removable": true
        },
        "mysql-common": {
            "version": "5.1.58-1ubuntu1",
            "allowed": ">=",
            "removable": true
        },
        "mysql-server-5.1": {
            "version": "5.1.58-1ubuntu1",
            "allowed": ">=",
            "removable": true,
            "pre-install": [
                {
                    #this apparently is a action needed for ubuntu/debian to not prompt for passwords...
                    "run_as_root": true,
                    "cmd": [
                        "debconf-set-selections"
                    ],
                    "stdin": [
                        "mysql-server-5.1 mysql-server/root_password password %PASSWORD%",
                        "mysql-server-5.1 mysql-server/root_password_again password %PASSWORD%",
                        "mysql-server-5.1 mysql-server/start_on_boot boolean %BOOT_START%"
                    ]
                }
            ]
        }
    },
    "rhel-6": {
        "mysql": {
            "version": "5.1.52-1.el6_0.1",
            "allowed": ">=",
            "removable": true
        },
        "mysql-server": {
            "version": "5.1.52-1.el6_0.1",
            "allowed": ">=",
            "removable": true,
            "post-install": [
                { 
                    #Make sure it'll start on rebuut
                    "run_as_root": true,
                    "cmd" : [ "chkconfig", "mysqld", "on"]
                },
                { 
                    #Start the mysql service
                    "run_as_root": true,
                    "cmd" : [ "service", "mysqld", "start"]
                },
                {  
                    # Set the root password
                    "run_as_root": true,
                    "cmd" : [ "mysqladmin", "-u", "root", 
                               "password", "%PASSWORD%" ]
                }
            ]
        }
    }
}
