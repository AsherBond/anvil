# This is a extended json package definition file 
# We allow simple comments (lines starting with a hash symbol)
{
    # This is currently our "master" repo set with versions
    # that we are trying to align other distributions with.
    # The versions should at least be major + minor!
    "ubuntu-oneiric": {
        "rabbitmq-server": {
            "version": "2.5*",
            "removable": true
        }
    },
    "rhel-6": {
        "rabbitmq-server": {
            "version": "2.6*",
            "removable": true,
            "meta": {
                "epel" : true
            },
            "pre-install": [
                {
                    # Qpidd runs on the same port
                    "run_as_root": true,
                    "ignore_failure": true,
                    "cmd": [
                        "service",
                        "qpidd",
                        "stop"
                    ]
                },
                {
                    # Qpidd runs on the same port
                    "run_as_root": true,
                    "ignore_failure": true,
                    "cmd": [
                        "chkconfig",
                        "qpidd",
                        "off"
                    ]
                }
            ]
        }
    },
    "fedora-16": {
        "rabbitmq-server": {
            "version": "2.6*",
            "removable": true,
            "pre-install": [
                {
                    # Qpidd runs on the same port
                    "run_as_root": true,
                    "cmd": [
                        "service",
                        "qpidd",
                        "stop"
                    ]
                },
                {
                    # Qpidd runs on the same port
                    "run_as_root": true,
                    "cmd": [
                        "chkconfig",
                        "qpidd",
                        "off"
                    ]
                }
            ]
        }
    }
}
